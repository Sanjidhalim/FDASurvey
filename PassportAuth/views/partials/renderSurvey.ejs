<!DOCTYPE html>
<html lang="en" ng-app="myApp">
<head>
    <meta charset="UTF-8">
    <title>Form Builder</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
    <script src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.17/angular.min.js"></script>
</head>
<body>

<div class="container" >
    <h1>Survey Creator</h1>
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="/users">Home</a></li>

        </ul>
    <br>
    <div class="col-xs-4">
        <label>Enter/Edit Name of Survey</label>
        <input type="text" class="form-control"  placeholder="Name of Survey" ng-model=surveyName>
        <br>
    </div>


    <table class="table table-striped">
        <tr ng-repeat="question in questions">

            <td ng-if = "question.type== 'Txt'">{{question.prompt }}</td>
            <td ng-if = "question.type== 'Num'">{{question.prompt }}</td>
            <td ng-if = "question.type== 'Mc'">{{question.prompt}}<br>
                <ul class="list-group">
                    <li class="list-group-item" ng-repeat="option in question.options">
                        <label>{{option}}
                            <input type="radio" name="name" value="{{option}}" required />
                        </label>
                    </li>
                </ul>
            </td>
            <td class="text-center">
                <button type="button" class="btn btn-default" ng-click="moveUp(question)" aria-label="Left Align">
                    <span class="glyphicon glyphicon-upload" aria-hidden="true"></span>
                </button>

                <button type="button" class="btn btn-default" ng-click="moveDown(question)" aria-label="Left Align">
                    <span class="glyphicon glyphicon-download" aria-hidden="true"></span>
                </button>
            </td>
            <td class="text-center">
                <button type="button" ng-click="deleteQuestion(question)" class="btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </td>
        </tr>
    </table>

    <!-- This is commented out for now
    <label>Add new Question</label>
    <input type="text" class="form-control" name="" ng-model="newQuestion" placeholder="Enter Question">
    <br>
    -->
    <div class="question">
        <h4>
            <span class="label label-info">Select type of question to add</span>
            <select ng-model="questionType">
                <option value="Num">Number input</option>
                <option value="Txt">Text input</option>
                <option value="Mc">Multiple Choice</option>
            </select>
            <br>
        </h4>

        <div ng-if="questionType=='Num'">
            <input type="text" class="form-control" name="" ng-model="$parent.newQuestion" placeholder="Enter Question">
            <div>
                <br>
                <button class="btn btn-primary" ng-click="addQuestion()" ng-disabled = notEnabled>Add Question</button>
            </div>

        </div>

        <div ng-if="questionType=='Txt'">
            <input type="text" class="form-control" name="" ng-model="$parent.newQuestion" placeholder="Enter Question">
            <div>
                <br>
                <button class="btn btn-primary" ng-click="addQuestion()" ng-disabled = notEnabled>Add Question</button>
            </div>
        </div>

        <div ng-if="questionType=='Mc'">
            <input type="text" class="form-control" name="" ng-model="$parent.newQuestion" placeholder="Enter Prompt">
            <br>

            <div class="col-xs-3" ng-repeat-start="i in newOptions">
                <input class="form-control" ng-model="mcqPrompts[i]" type="text" placeholder="Add new option">
            </div><br><br ng-repeat-end />

            <br>

            <div>
                <button class = "btn btn-primary" ng-click="newMcOption()">Add Option</button>
            </div>

            <div>
                <br>
                <button class="btn btn-primary" ng-click="addQuestion()" ng-disabled = notEnabled>Add Question</button>
            </div>

        </div>
        <br>
    </div>
	<br>
	
	<div class = question>
    <br>
    <form name="myForm">
        <label>Repeat?:
            <input type="checkbox" ng-model="repeat">
        </label>
    </form>
    <div ng-if="repeat">
        <label>Mon
            <input type="checkbox" ng-model="a">
        </label>
        <label>Tue
            <input type="checkbox" ng-model="b">
        </label>
        <label>Wed
            <input type="checkbox" ng-model="c">
        </label>
        <label>Thu
            <input type="checkbox" ng-model="d">
        </label>
        <label>Fri
            <input type="checkbox" ng-model="e">
        </label>
        <label>Sat
            <input type="checkbox" ng-model="f">
        </label>
        <label>Sun
            <input type="checkbox" ng-model="g">
        </label><br>

        <label>Number of times a day</label>
        <input type="number" ng-model="numDay">
        <br>

        <div ng-repeat="i in getNumber(numDay)">
            <label>Time {{i}}</label>
            <input type="time" ng-model="sda">
        </div>
        <br>

        <label>Repeat until?</label>
        <input type="date" ng-model="Until">
    </div>

</div>

<div class="container">
    <br>
    <button class="btn btn-primary" ng-click="saveSurvey()" ng-disabled = "notEnabled || surveyName.length==0">Save Survey</button>
    <button class="btn btn-primary" ng-click="publish()" ng-disabled = "notEnabled || surveyName.length==0">Publish Survey</button>

</div>


<div class="FormElements"></div>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
<script src = "../public/controller.js"></script>
</body>
</html>